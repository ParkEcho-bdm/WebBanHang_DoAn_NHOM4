</div>
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var p in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Sale badge-->
                        <div class="badge bg-success text-pink  position-absolute" style="top: 0.5rem; right: 0.5rem">outstanding</div>
                        <!-- Product image-->
                        @if (string.IsNullOrEmpty(p.ImageUrl))
                        {
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                        }
                        else
                        {
                            <img class="card-img-top" src="/@p.ImageUrl" alt="..." />
                        }

                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@p.Name</h5>
                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <!-- Product price-->
                                <span class="text-muted">@Html.FormatValue(p.Price, "${0:#,##0}")</span>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="addtocart btn btn-outline-success mt-auto" data-productId="@p.Id" asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@p.Id">
                                 Buy
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<div>
    <ul class="pagination justify-content-center">
        <li class="page-item  @(ViewBag.pageIndex == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="1">&laquo;</a>
        </li>
        @for (var i = 1; i <= ViewBag.pageSum; i++)
        {
            <li class="page-item  @(ViewBag.pageIndex == i ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i"> @i </a>
            </li>
        }
        <li class="page-item @(ViewBag.pageIndex == @ViewBag.pageSum ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.pageSum">&raquo;</a>
        </li>
    </ul>
</div>